root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.go]
indent_style = tab

[*.py]
indent_style = space
indent_size = 4

[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_style = space
indent_size = 2

[*.{java,kt,kts}]
indent_style = space
indent_size = 4

[*.{c,h,cpp,hpp,rs}]
indent_style = space
indent_size = 4

[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2

[*.{yaml,yml,json,toml}]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[Dockerfile*]
indent_style = space
indent_size = 4
